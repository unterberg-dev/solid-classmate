{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 110,
    "lineEnding": "lf",
    "includes": ["**", "!**/_data", "!**/.vscode", "!**/dist", "!**/node_modules", "!**/package.json"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "domains": {
      "solid": "recommended"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "enabled": true,
      "attributePosition": "auto",
      "semicolons": "asNeeded",
      "indentWidth": 2,
      "indentStyle": "space"
    }
  }
}
